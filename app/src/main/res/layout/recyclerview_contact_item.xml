<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewmodel" type="pl.bgn.roompoc.viewmodel.AddressesViewModel"/>
    </data>
    <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            style="@style/contact_style"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_alignParentStart="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        style="@style/text_view_style"
                        android:id="@+id/name_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_orange_light"/>
                <TextView
                        style="@style/text_view_style"
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_orange_light"/>
            </LinearLayout>
            <ImageView
                    android:id="@+id/edit_contact"
                    android:padding="8dp"
                    android:paddingEnd="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/layout_addresses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_addresses"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    tools:listitem="@layout/recyclerview_address_item"/>
            <LinearLayout
                    android:orientation="vertical" android:layout_width="match_parent"
                    style="@style/address_style"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_alignParentStart="true"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:paddingLeft="12dp"
                                style="@style/text_view_style"
                                android:textStyle="italic"
                                android:text="@string/add_new_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/holo_orange_dark"/>
                    </LinearLayout>
                    <ImageView android:id="@+id/add_address" android:padding="8dp"
                               android:layout_centerVertical="true"
                               android:layout_alignParentEnd="true" android:src="@drawable/ic_add_black_24dp"
                               android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>